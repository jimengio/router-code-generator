{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "types": [],
    "baseUrl": "./src/",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "outDir": "./lib"
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
