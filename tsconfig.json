{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "types": ["jest", "node"],
    "baseUrl": "./src/",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": ["tests/generated/*.ts"]
}
